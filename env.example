# Busy Bees Environment Variables
# Copy this file to .env.local and fill in your actual values

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://your-domain.com
NEXT_PUBLIC_SITE_NAME="Busy Bees Indoor Playground"

# Contact Information
NEXT_PUBLIC_PHONE="(555) 123-BEES"
NEXT_PUBLIC_EMAIL="info@busybees.com"
NEXT_PUBLIC_ADDRESS="123 Play Street, Fun City, FC 12345"

# Business Hours (24-hour format)
NEXT_PUBLIC_OPEN_HOUR=9
NEXT_PUBLIC_CLOSE_HOUR=18

# Analytics (Optional)
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Form Handling (Optional - for contact forms)
# EMAILJS_SERVICE_ID=your_service_id
# EMAILJS_TEMPLATE_ID=your_template_id
# EMAILJS_PUBLIC_KEY=your_public_key
